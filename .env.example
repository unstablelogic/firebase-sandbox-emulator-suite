# Firebase Production Configuration
# Copy this file to .env.local and fill in your Firebase project credentials
# Get these values from: https://console.firebase.google.com/project/YOUR_PROJECT/settings/general

# Firebase Client SDK Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK Configuration (for server-side operations)
# Get these from: https://console.firebase.google.com/project/YOUR_PROJECT/settings/serviceaccounts/adminsdk
FIREBASE_ADMIN_PROJECT_ID=your_project_id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project_id.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"

# Environment Mode
# Set to "true" to use Firebase Emulators instead of production
NEXT_PUBLIC_FIREBASE_EMULATOR=false
